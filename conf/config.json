{
    "daemon": {
        "runasgroup": "root",
        "runasuser": "root",
        "concurrent": false,
        "daemonize": true,
        "mode": "single"
    },
    "addons": {
        "active": {
            "Slack": "on"
        },
        "scan": [
            "addons/",
            "vendors/"
        ]
    },
    "log": {
        "level": "info",
        "loggers": [
            {
                "destination": "echo",
                "key": "echo"
            },
            {
                "destination": "filesystem",
                "file": "log/jarvis.log",
                "key": "persist"
            }
        ]
    }
}
